{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "login": true,
    "networking": false,
    "consts": {
        "WP_DISABLE_FATAL_ERROR_HANDLER": false,
        "WP_DEBUG": false,
        "WP_DEBUG_DISPLAY": false,
        "DISALLOW_FILE_MODS": true
    },
    "siteOptions": {
        "blogname": "Blueky",
        "blogdescription": "Blueky Demo Site"
    },
    "steps": [
        {
            "step": "setSiteLanguage",
            "language": "vi"
        },
        {
            "step": "installTheme",
            "themeZipFile": {
                "resource": "wordpress.org/themes",
                "slug": "blocksy"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "wordpress.org/plugins",
                "slug": "blockera"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "wordpress.org/plugins",
                "slug": "fluentform"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "wordpress.org/plugins",
                "slug": "all-in-one-wp-migration"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "wordpress.org/plugins",
                "slug": "admin-site-enhancements"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "wordpress.org/plugins",
                "slug": "slim-seo"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "wordpress.org/plugins",
                "slug": "google-site-kit"
            }
        }
    ]
}
